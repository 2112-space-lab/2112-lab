{
    "name": "go-utils",
    "targets": {
        "verify": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd packages/go-utils && go vet ./..."
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd packages/go-utils && go test -v ./..."
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd packages/go-utils && go mod tidy && go build && git tag v$(date +%s) && git push origin --tags && echo 'Go module published to GitHub'"
            }
        }
    }
}
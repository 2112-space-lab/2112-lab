{
    "name": "propagator-service",
    "targets": {
        "install": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "(pip install --upgrade pip )",
                    "(pip install -r propagator-service/requirements.txt )"
                ]
            }
        },
        "update": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "nx run graphql-apis:generate",
                    "rm -rf propagator-service/app/generated",
                    "mkdir -p propagator-service/app/generated",
                    "cp -r packages/graphql-apis/python-generator/generated/* propagator-service/app/generated/",
                    "rm -rf propagator-service/app/graphql_schemas",
                    "mkdir -p propagator-service/app/graphql_schemas",
                    "cp -r packages/graphql-apis/schemas/* propagator-service/app/graphql_schemas/"
                ]
            }
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "command": "(FLASK_ENV=${FLASK_ENV:-development} PORT=${PORT:-5000} python propagator-service/app/main.py --host 0.0.0.0 --port $PORT)"
            }
        },
        "docker-package": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "docker build -t propagator-service -f ../deployments/docker/Dockerfile.propagator ."
                ]
            }
        },
        "docker-start": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "docker run -d --name propagator-container -p 5000:5000 propagator-service"
                ]
            }
        }
    }
}